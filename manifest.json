{
  "manifest_version": 3,
  "name": "__MSG_extensionName__",
  "version": "1.1.4",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/fagionpw/gmail-otp-extension",
  "default_locale": "ru",
  "key": "",
  "action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/frogus-16.png",
      "32": "icons/frogus-32.png",
      "48": "icons/frogus-48.png",
      "128": "icons/frogus-128.png",
      "512": "icons/frogus-512.png"
    }
  },
  "icons": {
    "16": "icons/frogus-16.png",
    "32": "icons/frogus-32.png",
    "48": "icons/frogus-48.png",
    "128": "icons/frogus-128.png",
    "512": "icons/frogus-512.png"
  },
  "permissions": [
    "alarms",
    "identity",
    "notifications",
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://gmail.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "629171495161-glvg17e0pshp9q15rbli2jd8b4pe4gkq.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "exclude_matches": [
        "https://accounts.google.com/*",
        "https://myaccount.google.com/*"
      ],
      "js": ["src/content/index.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
