{
  "manifest_version": 3,
  "name": "Gmail OTP",
  "version": "1.1.0",
  "description": "Автоматически находит OTP-коды в Gmail и вставляет их в 1 клик. Работает локально и безопасно.",
  "homepage_url": "https://github.com/fagionpw/gmail-otp-extension",
  "action": {
    "default_title": "Gmail OTP",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/frogus-16.png",
      "32": "icons/frogus-32.png",
      "48": "icons/frogus-48.png",
      "128": "icons/frogus-128.png",
      "512": "icons/frogus-512.png"
    }
  },
  "icons": {
    "16": "icons/frogus-16.png",
    "32": "icons/frogus-32.png",
    "48": "icons/frogus-48.png",
    "128": "icons/frogus-128.png",
    "512": "icons/frogus-512.png"
  },
  "permissions": [
    "alarms",
    "identity",
    "notifications",
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "https://gmail.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "YOUR_OWN_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
